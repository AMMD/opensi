										<menupopup>
											<menuitem label="Jour(s)" value="1" />
											<menuitem label="Semaine(s)" value="2" />
											<menuitem label="Mois" value="3" />
											<menuitem label="Année(s)" value="4" />
										</menupopup>
									</menulist>
								</hbox>
