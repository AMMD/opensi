									<textbox id="valeurTTC" maxlength="10" size="10" value="0" class="nombre" disabled="true"/>
								</hbox>
							</row>
							<row align="center" >
								<label class="label" value="Délai de préavis :" />
								<hbox align="center">
									<menulist id="delaiPreavis" oncommand="menu_abonnement_setModifie(true);">
										<menupopup>
											<menuitem label="1" value="1" />
											<menuitem label="2" value="2" />
											<menuitem label="3" value="3" />
										</menupopup>
									</menulist>
									<label class="label" value="mois" />
								</hbox>
							</row>
							<row align="center">
								<label class="label" value="Génération facture :" />
